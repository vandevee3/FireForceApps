<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BuildingCondition"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carousel"
                android:layout_width="wrap_content"
                android:layout_height="155dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="32dp"
                app:fillColor="#ED7272"
                app:pageColor="#FFF"
                app:radius="6dp">

            </com.synnapps.carouselview.CarouselView>

            <Button
                android:id="@id/button7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/carousel"
                android:layout_alignParentStart="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/gray1"
                android:text="4TH"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/button7"
                android:layout_alignParentStart="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="34dp"
                android:backgroundTint="@color/gray1"
                android:text="2ND"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button12"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/button9"
                android:layout_alignParentStart="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="34dp"
                android:backgroundTint="@color/gray1"
                android:text="G"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/carousel"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="70dp"
                android:backgroundTint="@color/gray1"
                android:text="3RD"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/button8"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="70dp"
                android:backgroundTint="@color/gray1"
                android:text="1ST"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button13"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/button11"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="70dp"
                android:backgroundTint="@color/gray1"
                android:text="UG"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="49dp"
                app:srcCompat="@drawable/ic_rectangle_21" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="62dp"
                android:layout_height="59dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="39dp"
                android:backgroundTint="#00FAFAFA"
                android:onClick="onClickFireman"
                app:srcCompat="@drawable/ic_fireman_unclick" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="63dp"
                android:layout_height="61dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="39dp"
                android:layout_toEndOf="@+id/imageButton"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/ic_building_click" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="63dp"
                android:layout_height="61dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="97dp"
                android:layout_marginBottom="39dp"
                android:layout_toEndOf="@+id/imageButton"
                android:backgroundTint="#00FFFFFF"
                android:onClick="onClickTips"
                app:srcCompat="@drawable/ic_tips_unclick" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="63dp"
                android:layout_height="61dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="39dp"
                android:layout_toEndOf="@+id/imageButton3"
                android:backgroundTint="#00FFFFFF"
                android:onClick="onClickDontDo"
                app:srcCompat="@drawable/ic_don_t_do_unclick" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>